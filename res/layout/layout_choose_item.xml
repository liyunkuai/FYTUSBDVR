<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="5dp"
    android:layout_width="160dip"
    android:layout_height="90dip"
    android:orientation="vertical" >
    <RelativeLayout
        android:id="@+id/thumb_layout"
        android:layout_marginRight="15dp"  
        android:layout_width="160dip"
        android:layout_height="90dip">
        <ImageView 
        android:clickable="false"    
        android:id="@+id/image_thumb"
        android:layout_width="160dip"
        android:scaleType="fitXY"
        android:layout_height="90dip"
        android:background="@drawable/def_image"
        android:layout_gravity="center_horizontal"/>
       <ImageView 
        android:visibility="gone"   
       	android:clickable="false"    
        android:id="@+id/image_play"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_centerInParent="true"
        android:background="@drawable/btn_play"/>
       <ImageView 
       android:clickable="false"    
        android:visibility="gone"
        android:id="@+id/image_lock"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_centerInParent="true"
        android:background="@drawable/big_lock"/>
       <ImageView 
        android:clickable="false"
        android:visibility="gone"
        android:id="@+id/image_selet"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@drawable/image_edit_selet"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"/>
    </RelativeLayout>
   <TextView
       android:background="@drawable/edit_time_bg"
       android:id="@+id/text_name"
       android:layout_width="160dip"
       android:layout_height="wrap_content"
       android:gravity="center_vertical"
       android:marqueeRepeatLimit="marquee_forever"
       android:singleLine="true"
       android:textColor="@android:color/black"
       android:textSize="15.0sp"/> 
</LinearLayout>