<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_marginLeft="40dip"
        android:id="@+id/play_control_layout"
        android:layout_marginBottom="40dip"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
		<LinearLayout 
		    android:id="@+id/last_song_layout"
		    android:layout_width="0dip"
		    android:layout_weight="1.2"
		    android:gravity="center"
		    android:layout_height="wrap_content">
        <Button
            android:id="@+id/last_song"
            style="@style/style_setting_button"
            android:background="@drawable/d_uicommon_last_song" />
		</LinearLayout>
		<LinearLayout 
		    android:id="@+id/start_song_layout"
		    android:layout_width="0dip"
		    android:layout_weight="1.2"
		    android:gravity="center"
		    android:layout_height="wrap_content">
        <Button
            android:id="@+id/start_pause"
            style="@style/style_setting_button"
            android:background="@drawable/d_uicommon_start" />
		</LinearLayout>
		<LinearLayout 
		    android:id="@+id/next_song_layout"
		    android:layout_width="0dip"
		    android:layout_weight="1.2"
		    android:gravity="center"
		    android:layout_height="wrap_content">
       <Button
            android:id="@+id/next_song"
            style="@style/style_setting_button"
            android:background="@drawable/d_uicommon_next_song" />
		</LinearLayout>
        
   
    <LinearLayout
        	android:layout_marginLeft="20dip"
           	android:layout_width="0dip"
           	android:layout_weight="4"
            android:layout_height="68dip"
            android:background="@drawable/seekbar_layout_bg"
            android:gravity="center"
            android:orientation="horizontal" >
            <TextView
                android:layout_marginLeft="10dip"
                android:textSize="20sp"
                android:id="@+id/start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <SeekBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:max="100"
                android:progress="0"
                android:progressDrawable="@drawable/seekbar_def_background"
                android:thumb="@drawable/seekbar_thumb"
                android:thumbOffset="0.0dip" />

            <TextView
                android:layout_marginRight="10dip"
                android:textSize="20sp"
                android:id="@+id/end_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/placeholder_layout"
            android:layout_width="0dip"
           	android:layout_weight="0.8"
            android:layout_height="68dip"/>
      </LinearLayout>
</RelativeLayout>

    
