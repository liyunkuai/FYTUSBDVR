<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    <TextView 
        android:id="@+id/dialog_tittle"
        android:layout_width="wrap_content"
        android:text="@string/str_format_title"
        android:textSize="20sp"
        android:layout_height="wrap_content"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/view" />
    <TextView 
        android:textSize="20sp"
        android:textColor="@color/red"
        android:id="@+id/dialog_messege"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_width="match_parent"
        android:text="@string/str_format_message_two"
        android:layout_height="0dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/view" />
<LinearLayout 
    android:orientation="horizontal"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
    
    <TextView 
        android:textSize="20sp"
        android:id="@+id/dialog_cancle"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:text="@string/str_tip_cancle"
        android:layout_height="wrap_content"/>
    <TextView 
        android:textSize="20sp"
        android:id="@+id/dialog_sure"
       	android:layout_weight="1"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:text="@string/str_tip_sure"
        android:layout_height="wrap_content"/>
    
    
</LinearLayout>
</LinearLayout>
