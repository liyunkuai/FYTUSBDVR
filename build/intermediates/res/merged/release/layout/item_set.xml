<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_set"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    style="@style/ListViewSetItem" >
    <RadioButton android:id="@+id/radio_button"
        android:focusable="false"
        android:clickable="false"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        style="@style/ListViewTitleText" />
    <ImageView android:id="@+id/item_set_img"
        android:layout_width="@dimen/item_set_imageview_layout_width"
        android:layout_height="@dimen/item_set_imageview_layout_height"
        android:scaleType="fitCenter"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true" />
    

</RelativeLayout>
